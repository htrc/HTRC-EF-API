# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /swagger.json                   controllers.Assets.at(path="/public", file="swagger.json")

GET     /volumes/:cleanId               controllers.EfController.getVolume(cleanId, pos: Boolean ?= true)
GET     /volumes/:cleanId/metadata      controllers.EfController.getVolumeMetadata(cleanId)
GET     /volumes/:cleanId/pages         controllers.EfController.getVolumePages(cleanId, seq: Option[String] ?= None, pos: Boolean ?= true)
POST    /worksets                       controllers.EfController.createWorkset
DELETE  /worksets/:id                   controllers.EfController.deleteWorkset(id)
GET     /worksets/:id/volumes           controllers.EfController.getWorksetVolumes(id, pos: Boolean ?= true)
GET     /worksets/:id/metadata          controllers.EfController.getWorksetVolumesMetadata(id)
